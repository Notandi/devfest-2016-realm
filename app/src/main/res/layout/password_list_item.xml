<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
  <data>
    <import type="gdg.devfest.passwordmanager.framework.Icons"/>
    <variable
        name="viewModel"
        type="gdg.devfest.passwordmanager.viewmodel.PasswordItemViewModel"
        />
  </data>
  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="8dp"
      android:background="?android:attr/selectableItemBackground"
      android:onClick="@{()->viewModel.navigateToPasswordDetails()}"
      >

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="4dp"
        android:src="@{Icons.resourceOf(viewModel.icon)}"
        android:id="@+id/ivIcon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvName"
        android:text="@{viewModel.name}"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ivIcon"
        tools:text="PasswordName"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUserName"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/ivIcon"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:text="@{viewModel.userName}"
        tools:text="UserName"
        />
  </android.support.constraint.ConstraintLayout>
</layout>